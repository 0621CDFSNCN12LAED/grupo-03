<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/styles-form.css">
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    <script defer src="/js/users/login.js"></script>
</head>
<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>

    <main>
        <form action="login" class="formulario" id="formulario" METHOD="POST">
            <div class="formulario__grupo" id="grupo__email">
                <label for="email" class="formulario__label">Correo Electrónico</label>
                <div class="formulario__grupo-input">
                    <input type="email" class="formulario__input" name="email" id="email" placeholder="email@email.com">
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">El Correo debe ser valido</p>
            </div>

            <div class="formulario__grupo" id="grupo__password">
                <label for="password" class="formulario__label">Contraseña</label>
                <div class="formulario__grupo-input">
                    <input type="password" class="formulario__input" name="password" id="password">
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">La Contraseña debe ser valida</p>
            </div>

            <div class="formulario__mensaje" id="formulario__mensaje">
                <p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Rellena el formulario correctamente. </p>
            </div>

            <div class="formulario__grupo formulario__grupo-btn-enviar">
                <button type="submit" class="formulario__btn">Ingresar</button>
            </div>
        </form>             
        <div class="panels-contenedor">
            <div class="panel">
                <div class="content">
                    <h3>¿Eres nuevo?</h3>
                    <a href="/users/register">
                        <button class="btn transparent" id="sign-up-button" >
                            Registrate
                        </button>
                    </a>
                    <div class="validation-errors">
                        <div class="frontend-validations">
                            <p class="error-title" id="error-title"></p>
                            <ul class="errors" id="errors"></ul>
                        </div>
                        <div class="backend-validations">
                            <% if (locals.errors) { %> 
                                <p style = "color:red">ERROR</p>
                                <ul>
                                    <% for (let error of errors) { %> 
                                        <li style = "color:red"><%= error.msg %></li>
                                    <% } %> 
                                </ul>
                            <% } %> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
</body>
</html>