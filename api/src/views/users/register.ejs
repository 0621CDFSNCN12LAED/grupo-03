<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/styles-register.css">
    <script defer src="/js/registerForm.js"></script>
</head>
<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>
    <main>
        <div class="contenedor">
            <div class="form-contenedor">
                <div class="register">
                    <form action="register" class="register-form" method="post" enctype="multipart/form-data">
                        <h2 class="form-title">Registrate</h2>
                        <div class="input-field">
                            <label for="firstName">Nombre</label>
                            <br>
                            <i class="fas fa-user"></i>
                            <input type="text" name="firstName" id="firstName" placeholder="Nombre">
                        </div>
                        <br>
                        <div class="input-field">
                            <label for="lastName">Apellido</label>
                            <br>
                            <i class="fas fa-user"></i>
                            <input type="text" name="lastName" id="lastName" placeholder="Apellido">
                        </div>
                        <br>
                        <div class="input-field">
                            <label for="email">Email</label>
                            <br>
                            <i class="fas fa-envelope"></i>
                            <input type="email" name="email" id="email" placeholder="Email">
                        </div>
                        <br>
                        <div class="input-field">
                            <label for="password">Contraseña</label>
                            <br>
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" id="password" placeholder="Contraseña">
                        </div>
                        <br>
                        <div class="user-img">
                            <label for="image">Foto de usuario</label>
                            <br>
                            <input type="file" name="image" id="image" accept="image/*">
                        </div>
                        <br>
                        <input type="submit" class="btn solid" value="Registrar">
                    </form>
                    <div>
                        <p class="social-text">O Registrate con redes sociales</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panels-contenedor">
                <div class="panel">
                    <div class="content">
                        <h3>¿Uno de nosotros?</h3>
                        <a href="/users/login">
                            <button class="btn transparent" id="sign-up-button" >
                                Ingresa
                            </button>
                        </a>
                        <div class="validation-errors">
                            <div class="frontend-validations">
                                <p class="error-title" id="error-title"></p>
                                <ul class="errors" id="errors"></ul>
                            </div>
                            <div class="backend-validations">
                                <% if (locals.errors) { %> 
                                    <p style = "color:red">ERROR</p>
                                    <ul>
                                        <% for (let error of errors) { %> 
                                            <li style = "color:red"><%= error.msg %></li>
                                        <% } %> 
                                    </ul>
                                <% } %> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
</body> 
</html>